@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="container" style="background:none   ;">

    <div class="row outer-Box" style=" margin-top:20px; padding-bottom:0!important;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Please complete the form
                </div>
                <div class="panel-body" style="background:#f3f3f3;">
                    <div class="form-group " style="padding-bottom:0!important;">


                        <h2>Create</h2>

                        <style type="text/css">
                            #tbrole, .c {
                                border: double;
                            }
                        </style>


                        @using (Html.BeginForm())
                        {
                            <table id="tbrole">
                                <tr>
                                    <td class="c">Enter Role Name To be Created:</td>
                                    <td class="c">
                                        @Html.EditorFor(m => m.Name)
                                    </td>
                                </tr>
                            </table>
                            <input type="submit" value="Create Role" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

