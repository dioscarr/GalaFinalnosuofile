<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background:black;">

    <section class="header">
        <div class="container">
            <div class="row">
                <div class="col-xs-2 col-xs-offset-10 user_data">
                    <div class="user_icon pull-left">
                        <a href="~/view/home/index"><img src="~/Images/user_icon.png" /></a>@Html.Partial("_LoginPartial")
                    </div>
                   
                </div>
            </div>
            <div class="row logo_and_search">
                <div class="col-xs-4 logo">
                    <a href="~/admin/Home/index"><img src="~/Images/logo.png" /></a>
                </div>
                <div class="col-xs-4 col-xs-offset-4 search_block">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search the entire site...">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" type="button" aria-label="Left Align"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <nav class="header_menu navbar navbar-default menu">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="menu nav nav_bar_menu">
                    <li role="presentation"><a href="~/admin/AdminAboutus/index">about us</a></li>
                    <li role="presentation"><a href="~/admin/countryfirm/Firms">Firms</a></li>
                    <li role="presentation"><a href="~/admin/Adminmember/MemberList">members</a></li>
                    <li role="presentation"><a href="~/admin/Events/Index">events / News & Press</a></li>                    
                    <li role="presentation"><a href="~/admin/AdminPublication/Index">publication</a></li>
                    <li role="presentation"><a href="~/admin/Gazettes/Index">Gazette</a></li>
                    <li role="presentation"><a href="~/Admin/AdminContacts/Edit">contact us</a></li>
                    <li role="presentation" >@Html.ActionLink("Role", "Index", "UserManagement")</li>
                </ul>
            </div>
        </div>
    </nav>


