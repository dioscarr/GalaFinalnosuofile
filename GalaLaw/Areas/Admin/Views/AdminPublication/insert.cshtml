@model GalaLaw.Areas.Admin.Models.PublicationModel

@{
    ViewBag.Title = "insert";
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";
}


<div class="container" style="background:white;">

    <div class="row" style="padding:50px 0">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(c => c.publicationbook.Id)
            @Html.HiddenFor(c => c.publicationbook.Created)
            @Html.HiddenFor(c => c.publicationbook.Modified)
            @Html.HiddenFor(c => c.publicationbook.isDeleted)

            <div class="form-group">
                @Html.LabelFor(model => model.publicationbook.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.publicationbook.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.publicationbook.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.publicationbook.Desc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.publicationbook.Desc, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })
                  
                    @Html.ValidationMessageFor(model => model.publicationbook.Desc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("")
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ImageUpload, new { @type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.publicationbook.Picture, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>

@section Scripts {
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
