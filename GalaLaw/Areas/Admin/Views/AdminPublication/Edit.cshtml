@model GalaLaw.Areas.Admin.Models.PublicationModel


@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";
}
<div class="container" style="background:white;">

    <div class="row" style="padding:50px 50px;">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal ">
              
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.publicationbook.Id)
                @Html.HiddenFor(model => model.publicationbook.Created)
                @Html.HiddenFor(model => model.publicationbook.Modified)
                @Html.HiddenFor(model => model.publicationbook.isDeleted)


                <div class="form-group">
                    @Html.LabelFor(model => model.publicationbook.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.publicationbook.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.publicationbook.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.publicationbook.Desc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.publicationbook.Desc, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })


                       
                        @Html.ValidationMessageFor(model => model.publicationbook.Desc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.publicationbook.Picture, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        <img src="~/Images/@Model.publicationbook.Picture" />
                        <br />
                        <br />
                        @Html.CheckBoxFor(c => c.isNewPicture, new { id = "checkIfNew" })
                        <label>Check to select new Image</label>
                        <div id="newPicture" style="display:none;">
                            @Html.LabelFor(m => m.ImageUpload)
                            @Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })

                        </div>
                        <br />
                        <br />

                    </div>
                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                        </div>
                    </div>          
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        </div>
    </div>

        @section Scripts {
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

            @Scripts.Render("~/bundles/jqueryval")


            <script type="text/javascript">

                $(function myfunction() {

                    $('#checkIfNew').change(function () {
                        $('#newPicture').slideToggle();
                    }
                    );
                })

                    
            </script>
        }
